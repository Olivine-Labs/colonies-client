  <head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>

    <title>{{#if subtitle}}{{subtitle}} | {{/if}}Colonies</title>

    <meta name='description' content='Colonies is an explosive side-scrolling strategy game.'>
    <meta name='author' content='Olivine Labs, LLC. <projects@olivinelabs.com>'>

    <meta name='viewport' content='width=device-width,initial-scale=1'>

    <link href='{{cdn}}/css/app.css' rel='stylesheet' />

    <link rel='alternate' type='application/rss+xml' title='Colonies News RSS Feed' href='/RSS/'>

    {{#if bootstrap}}
      <script>
        this.bootstrap = {{{bootstrap}}};
      </script>
    {{/if}}

    <script src='{{cdn}}/js/lib/modernizr-2.6.2.js'></script>

    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/assets/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="/assets/ico/favicon.png">
  </head>
  <body>
    {{> layouts/header}}

    <div id='main' role='main'>
      {{{body}}}
    </div>

    {{> layouts/footer}}

    <script src="{{cdn}}/js/lib/jquery-1.10.2.min.js"></script>
    <script src="{{cdn}}/js/app.js"></script>

    {{#if googleAnalyticsId}}
      <script async>
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '{{googleAnalyticsId}}']);
        _gaq.push(['_setDomainName', '{{googleAnalyticsDomain}}']);
        _gaq.push(['_setAllowHash', false]);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script');
          ga.type = 'text/javascript';
          ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';

          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    {{/if}}

    <!--[if lt IE 7 ]>
      <script src='//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js'></script>
      <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    <![endif]-->

    <!-- {{renderedAt}} -->
  </body>
</html>

